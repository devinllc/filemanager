{
    "version": 2,
    "builds": [
        {
            "src": "backend/vercel_wsgi.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/vercel_wsgi.py"
        },
        {
            "src": "/admin/(.*)",
            "dest": "backend/vercel_wsgi.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/build/$1"
        }
    ]
}