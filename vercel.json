{
    "version": 2,
    "builds": [
        {
            "src": "backend/vercel_wsgi.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/health",
            "dest": "backend/vercel_wsgi.py"
        },
        {
            "src": "/api/(.*)",
            "dest": "backend/vercel_wsgi.py"
        },
        {
            "src": "/admin(.*)",
            "dest": "backend/vercel_wsgi.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/build/$1"
        }
    ],
    "env": {
        "DJANGO_SETTINGS_MODULE": "backend.settings",
        "ALLOWED_HOSTS": "filemanager-sandy.vercel.app,vercel.app",
        "DEBUG": "False",
        "VERCEL": "true"
    }
}